<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout

        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context=".NFTOPReturn"
        tools:showIn="@layout/activity_nftror">

    <TextView
            android:id="@+id/TV_TEXTROR2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/title_text_dec"
            android:textSize="30sp"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteX="0dp"/>

    <VideoView
            android:id="@+id/videoView"



            android:layout_width="fill_parent"
            android:layout_height="fill_parent"

            android:layout_marginBottom="150dp"
            android:layout_marginTop="45dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"

            tools:ignore="MissingConstraints"/>

    <!--android:background="@color/white"-->
    <EditText
            android:id="@+id/ET_TEXTOROR2"

            style="@style/Widget.AppCompat.EditText"

            android:textColor="@color/colorText"
            android:textColorHint="@color/design_default_color_primary_dark"



            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:layout_marginBottom="150dp"
            android:layout_marginTop="45dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"

            android:inputType="textAutoCorrect|textAutoComplete|textMultiLine" />

    <!-- https://android-code.blogspot.com/2015/08/android-imageview-set-bitmap.html-->



    <EditText
            android:id="@+id/ET_TEXTOROR3"

            style="@style/Widget.AppCompat.EditText"

            android:textColor="@color/colorText"
            android:textColorHint="@color/design_default_color_primary_dark"
            android:background="@color/white"

            android:layout_width="match_parent"
            android:layout_height="140dp"

            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"

            android:textSize="15sp"

            android:inputType="textAutoCorrect|textAutoComplete|textMultiLine"
            tools:layout_editor_absoluteX="4dp" app:layout_constraintTop_toBottomOf="@+id/ET_TEXTOROR2"
            app:layout_constraintBottom_toBottomOf="parent"/>


    <ImageView
            android:id="@+id/imageView1"


            android:layout_width="fill_parent"
            android:layout_height="fill_parent"

            android:layout_marginBottom="150dp"
            android:layout_marginTop="45dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"

            tools:ignore="MissingConstraints"/>





    <ProgressBar
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/progressBar2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.899"/>


</androidx.constraintlayout.widget.ConstraintLayout>